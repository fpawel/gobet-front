{
    "compilerOptions": {
        "outDir": "./js/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals":true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "experimentalDecorators": true,
        "lib": [
            "dom","dom.iterable","scripthost",
            "es6",
            "es2015","es2015.core", 
            "es2015.symbol", "es2015.symbol.wellknown", 
            "es2017","es2017.object"            
        ]
    },
    "include": [
        "src/**/*"
    ]
}